<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
        <item name="titleTextAppearance">@style/TextAppearance.App.TitleLarge</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextAppearance.App.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/comfortaa_bold</item>
        <item name="android:fontFamily">@font/comfortaa_bold</item>
    </style>

    <style name="detail_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/text_margin</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">8dp</item>
        <item name="android:fontFamily">@font/comfortaa_medium</item>
        <item name="android:justificationMode" tools:targetApi="o">inter_word</item>
    </style>

    <style name="CustomSearchView" parent="Widget.Material3.SearchView">
        <item name="android:textAppearance">@style/TextAppearance.Material3.SearchView</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Material3.Search</item>
    </style>

    <style name="TextAppearance.Material3.SearchView" parent="Base.TextAppearance.Material3.Search">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textColorHint">@color/md_theme_onSecondary_mediumContrast</item>

    </style>

    <style name="ThemeOverlay.Material3.Search">
        <item name="colorControlNormal">@color/md_theme_onSecondary_mediumContrast</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor_search_view</item>
        <item name="android:fontFamily">@font/comfortaa_semibold</item>
    </style>

    <style name="CustomBackButton" parent="@style/Widget.Material3.Button.IconButton.Filled">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:text">@string/back</item>
        <item name="android:fontFamily">@font/comfortaa_bold</item>
        <item name="icon">@drawable/ic_back</item>
        <item name="iconPadding">8dp</item>
    </style>

    <style name="CustomResetSearchButton" parent="@style/Widget.Material3.Button.IconButton.Filled">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:text">@string/reset</item>
        <item name="android:fontFamily">@font/comfortaa_bold</item>
        <item name="android:backgroundTint">@color/md_theme_error</item>
        <item name="icon">@drawable/ic_reset</item>
        <item name="iconPadding">8dp</item>
    </style>


</resources>