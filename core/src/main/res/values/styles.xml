<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="ItemTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:fontFamily">@font/comfortaa_medium</item>
        <item name="android:textColor">@color/color_item_text_title</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="ItemTitleSuggestion">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:fontFamily">@font/comfortaa_medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="ItemSubtitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:fontFamily">@font/comfortaa_regular</item>
        <item name="android:textColor">@color/color_item_text_subtitle</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_gravity">start</item>
    </style>


    <style name="ItemSubtitleSuggestion">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:fontFamily">@font/comfortaa_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="RoundedImage" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">5dp</item>
    </style>

</resources>